generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String    @id @default(cuid())
  title       String
  created_at  DateTime  @default(now())
  updated_at  DateTime  @default(now())
  image       String[]
  type        String
  body        String
  summary     String    @default("")
  id_category String    
  id_author   String
  comments    Comment[]
  author      Author    @relation(fields: [id_author], references: [id])
  category    Category  @relation(fields: [id_category], references: [id])
}

model Category {
  id    String @id @default(cuid())
  name  String
  slug  String @unique
  type  String
  posts Post[]
}

model PopularPost {
  id         String   @id @default(cuid())
  title      String
  image      String[]
  type       String
  id_author  String
  created_at DateTime
  author     Author   @relation(fields: [id_author], references: [id])
}

model Author {
  id          String        @id @default(cuid())
  name        String        @unique
  email       String        @unique
  phone       String
  password    String
  bio         String
  role        String
  image       String?
  popularPost PopularPost[]
  posts       Post[]
}

model Contacted {
  id           String  @id @default(cuid())
  name         String
  email        String
  organization String?
  message      String
}

model Comment {
  id      String  @id @default(cuid())
  name    String
  created_at DateTime  @default(now())
  email   String
  website String?
  message String
  id_post String
  post    Post    @relation(fields: [id_post], references: [id])
}
